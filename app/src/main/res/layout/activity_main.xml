<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSharePreference"
            android:onClick="loadSharePreference"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:textColor="#F5F5F5"
            android:backgroundTint="@color/colorPurplePink"
            android:textAlignment="center"
            android:text="Shared Preference" />

        <Button
            android:id="@+id/btnInternalStorage"
            android:onClick="loadInternalStorage"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:textColor="#F5F5F5"
            android:backgroundTint="@color/colorPurple"
            android:textAlignment="center"
            android:text="Internal Storage" />

        <Button
            android:id="@+id/btnExternalStorage"
            android:onClick="loadExternalStorage"
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:layout_rowSpan="3"
            android:textColor="#F5F5F5"
            android:backgroundTint="@color/colorRed"
            android:textAlignment="center"
            android:text="External Storage" />

        <Button
            android:id="@+id/btnSqLite"
            android:onClick="loadSqLite"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:textColor="#F5F5F5"
            android:backgroundTint="@color/colorBlue"
            android:textAlignment="center"
            android:text="SqLite" />

        <Button
            android:id="@+id/btnHTTP"
            android:onClick="loadHTTP"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:textColor="#F5F5F5"
            android:backgroundTint="@color/colorGreen"
            android:textAlignment="center"
            android:text="HTTP" />


    </GridLayout>
</RelativeLayout>